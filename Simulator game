  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Interactive Simulations</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(to right, #ff7e5f, #feb47b);
      color: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      flex-direction: column;
    }

    h1 {
      font-size: 2.5rem;
      text-align: center;
      margin-top: 20px;
      color: #fff;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
      background: -webkit-linear-gradient(#ff7e5f, #feb47b);
      -webkit-background-clip: text;
      background-clip: text;
    }

    .container {
      width: 100%;
      max-width: 1200px;
      margin-top: 40px;
      padding: 0 15px;
      text-align: center;
    }

    .simulations-list {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }

    .simulation-card {
      background-color: #fff;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
      cursor: pointer;
    }

    .simulation-card:hover {
      transform: translateY(-10px);
    }

    .simulation-card h3 {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .simulation-card p {
      font-size: 1rem;
      color: #555;
    }

    .simulation-content {
      display: none;
      background-color: #fff;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 800px;
      margin: auto;
      text-align: left;
    }

    .button {
      width: 100%;
      padding: 15px;
      background-color: #ff7e5f;
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 1.1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .button:hover {
      background-color: #feb47b;
    }

    .option-button {
      width: 100%;
      padding: 15px;
      background-color: #fff;
      border: 2px solid #ff7e5f;
      border-radius: 10px;
      font-size: 1.1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 10px;
    }

    .option-button:hover {
      background-color: #ff7e5f;
